{% extends 'base.html.twig' %}

{% block title %}Commission index{% endblock %}

{% block body %}
    <h1>Commission index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commission in commissions %}
            <tr>
                <td>{{ commission.id }}</td>
                <td>{{ commission.libelle }}</td>
                <td>
                    <a href="{{ path('app_commission_show', {'id': commission.id}) }}">show</a>
                    <a href="{{ path('app_commission_edit', {'id': commission.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commission_new') }}">Create new</a>
{% endblock %}
