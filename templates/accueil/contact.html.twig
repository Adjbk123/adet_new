{% extends 'baseSite.html.twig' %}

{% block title %}Contact - AdET{% endblock %}

{% block page_title %}Contactez l'AdET{% endblock %}

{% block page_description %}Nous sommes là pour vous aider. N'hésitez pas à nous contacter pour toute question ou demande.{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Contactez l'AdET</h4>
            </div>
            <div class="card-body">
                <form method="post" action="">
                    <div class="mb-3">
                        <label for="nom" class="form-label label-bold">Nom</label>
                        <input type="text" class="form-control" id="nom" name="nom" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label label-bold">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label label-bold">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% if success %}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Message envoyé',
            text: 'Votre message a bien été envoyé à l\'AdET. Merci !'
        });
    </script>
{% endif %}
{% endblock %} 